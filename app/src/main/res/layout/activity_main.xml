<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnRec"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100dp"
        android:drawableLeft="@drawable/ic_mic_black_24dp"
        android:text="Hold TO record" />


<Button
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:onClick="AllCommandActivitySwitch"
    android:backgroundTint="@color/colorAccent"
    android:background="@drawable/ic_format_list_bulleted_black_24dp"/>

    <TextView
        android:id="@+id/dsplyRslt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:hint="Text will Appear here"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/saveToggleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="Save"
        android:textOff="Turn on save mode"
        android:textOn="Turn off save mode"
        android:background="@drawable/button_style"
        />

</RelativeLayout>